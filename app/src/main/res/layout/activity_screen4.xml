<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:visibility="gone"
        android:background="#fff"
        android:id="@+id/plantCal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <AutoCompleteTextView
                android:hint="Select Row to Row Spacing"
                android:id="@+id/rows_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:layout_weight="1"
                android:text="Choose an option" />


        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:visibility="visible"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_marginTop="30dp"
            android:id="@+id/textInputLayout"
            android:layout_marginHorizontal="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <AutoCompleteTextView
                android:hint="Select Vine spacing between rows"
                android:id="@+id/vine_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:layout_weight="1"
                android:text="Choose an option" />



        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
               android:layout_weight="1"

                android:text="Number of Vines per acre"

                android:textColor="#000"

                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView

                android:layout_marginRight="10dp"
                android:id="@+id/ansTV"

                android:textColor="#000"
                android:text="-"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:paddingHorizontal="12dp"
        android:orientation="vertical"
        android:id="@+id/contactUs"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_marginBottom="20dp"
            android:src="@drawable/indian_agricultural_research_institute_logo"
            android:layout_width="160dp"
            android:layout_height="160dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:text="Email : "
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_gravity="center"

                android:textColor="#000"
                android:textSize="20sp"
                android:gravity="center"
                android:text="skush02@gmail.com"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:text="Address : "
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_gravity="center"

                android:textColor="#000"
                android:textSize="20sp"
                android:gravity="center"
                android:text="ICAR-Indian Agricultural Statistics Research Institute,New Delhi- 110012 , India"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:text="Guide : "
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_gravity="center"

                android:textColor="#000"
                android:textSize="20sp"
                android:gravity="center"
                android:text="Dr. Sangeeta Ahuja \n Scientist (Computer Applications) IASRI-IARI "
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:visibility="visible"
        android:id="@+id/recycle_view"

        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ScrollView
        android:background="#689f38"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView

            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="10dp"
            android:elevation="5dp"

            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="20dp"

                android:orientation="vertical"
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>




    </ScrollView>
</LinearLayout>
